<h3>Write new post</h3>

<form action="/editPost/<%= editPost._id %>?_method=PUT" method="POST">
  <label for="title">Title</label>
  <input type="text" name="title" id="title" value="<%= editPost.title %>">
  <label for="body">Content</label>
  <textarea name="body" id="body">
    <%= editPost.body %>
  </textarea>
  <input type="submit" value="Post">
</form>